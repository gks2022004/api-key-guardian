  "customPatterns": [
    {
      "name": "Custom API Key",
      "pattern": "custom_api_key_[a-zA-Z0-9]{32}",
      "severity": "high"
    },
    {
      "name": "Supabase Anon Key",
      "pattern": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9\\.[a-zA-Z0-9_-]+\\.[a-zA-Z0-9_-]+",
      "severity": "medium"
    },
    {
      "name": "Firebase Config",
      "pattern": "firebase[_-]?config[\"']?\\s*[:=]\\s*[\"']?[a-zA-Z0-9_-]{20,}",
      "severity": "high"
    }
  ]
}